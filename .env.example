AZURE_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# Storage Provider (s3 or azure)
STORAGE_PROVIDER=s3

# Azure Blob Storage (Required if STORAGE_PROVIDER=azure)
AZURE_STORAGE_CONNECTION_STRING=
